{
  "name": "@plasticbugs/bottts",
  "version": "2.0.0-alpha.4",
  "description": "Modern React 19 fork of bottts - customizable bot avatar components with TypeScript and Next.js support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "clean": "rimraf dist",
    "prepare": "husky",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{md,json}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "react",
    "bot",
    "avatar",
    "generator",
    "svg",
    "component",
    "typescript",
    "nextjs"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/plasticbugs/bottts.git"
  },
  "author": "plasticbugs <scottmosch@gmail.com>",
  "contributors": [
    "Mackenzie Etherington <hello@mackenziee.com> (Original author)"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.4.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.0",
    "rollup": "^4.28.0",
    "rollup-plugin-dts": "^6.1.0",
    "storybook": "^8.6.14",
    "tslib": "^2.8.1",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "clsx": "^2.1.0"
  }
}
